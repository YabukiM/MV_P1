
@{
    ViewBag.Title = "DatosEmpleados";
}

<h2>DatosEmpleados</h2>
<a href="~/Empleado/FormularioEmpleado" type="button" class="btn btn-primary">Nueva Tienda</a>
<table class="table table-hover">
    <tr>
        <th>No. Empleado</th>
        <th>Nombre</th>
        <th>Serie PC</th>
        <th>Puesto</th>
        <th>Carta Custodia</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
        
            <td>@item.nombre</td>
            <td>@item.Maquinas.SeriePC</td>
            <td>@item.puesto</td>
            <td>@item.cartacustiodia</td>

            <td><a href="~/Empleado/FormularioEmpleado?No_emp=@item.No_emp" class="btn btn-info">Editar</a></td>
            <td><a href="~/Empleado/Eliminar?No_emp=@item.No_emp" class="btn btn-warning">Baja</a></td>
        </tr>
    }
</table>
